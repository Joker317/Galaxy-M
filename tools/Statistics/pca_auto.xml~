<tool id="pca_auto" name="PCA - Automatic with Scores Test">
  <description>Variables used by all/many SimStitch functions</description>

  <command interpreter="python">
#if $process_locator.location == "user"
pca_auto.py --infile $input1 --url $process_locator.url --key $process_locator.key --port $process_locator.port --outfile $output
#else
pca_auto.py --infile $input1 --outfile $output 
#end if

  </command>

	<inputs>

		<conditional name = "process_locator">


			<param name="location" type="select" label="This should be processed on:">
				<option value="user"> My computer (or any other LWR server)</option>
				<option value="galaxy">Galaxy server </option>
	
			</param>

			<when value="user">
				<param name="url" type="user_ip" />
				<param name="port" type="integer" size="4" value="8913" label="Port of LWR server (standard is 8913)" />
				<param name="key" type="text" size="6" value="None" label="Private key for LWR server (default=None)" />
			</when>
		</conditional>		

		

		<param format="tabular" name="input1" type="data" label="Common Variables e.g. Set# (from history)" />

	</inputs>

  <outputs>

    	<data format="tabular" name="output" />
  </outputs>


  <help>

  </help>

</tool>
